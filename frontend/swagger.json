            "type": "string",
            "enum": [
              "AUTH_MISSING",
              "TOKEN_EXPIRED",
              "TOKEN_INVALID",
              "ACCESS_DENIED",
              "BAD_REQUEST",
              "INTERNAL_SERVER_ERROR"
